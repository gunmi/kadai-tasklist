<ul class="media-list">
  <% tasks.each do |task| %>
    <li class="media">
      <div class="media-body">
        <div>
          <p><%= task.content %></p>
        </div>
         <div>
          <% if current_user == task.user %>
            <%= link_to "削除", task, method: :delete, data: { confirm: "削除してもいいですか？?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>